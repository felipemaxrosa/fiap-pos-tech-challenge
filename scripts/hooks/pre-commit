#!/bin/sh

# Configura para usar o repositorio mockado
setNodeEnvToMock() {
    NODE_ENV_CURRENT=${NODE_ENV}
    export NODE_ENV='local-mock-repository'
}
# Restaura os valores originais
restoreNodeEnv() {
  export NODE_ENV=${NODE_ENV_CURRENT}
  unset NODE_ENV_CURRENT
}

# Fun√ß√£o para centralizar a mensagem e exibir em uma caixa
displayBoxedMessage() {
  message=$1
  total_width=80  # Largura total da caixa
  padding=3       # Espa√ßo de preenchimento entre a mensagem e as bordas

  # Ajusta a mensagem para ter o mesmo comprimento total
  message=$(printf "%-${total_width}s" "$message")

  # Gera a linha superior da caixa
  echo "‚ïî$(printf '‚ïê%.0s' $(seq 1 $((total_width - 3))))‚ïó"

  # Gera a linha com a mensagem centralizada
  echo "‚ïë$(printf "%-${total_width}s" "$message")‚ïë"

  # Gera a linha inferior da caixa
  echo "‚ïö$(printf '‚ïê%.0s' $(seq 1 $((total_width - 3))))‚ïù"
}

# Termina o programa, retornando a mensagem e status
exitWithMessage() {
  message=$1
  status=$2
  displayBoxedMessage "$message"
  restoreNodeEnv
  exit $status
}

setNodeEnvToMock

# Executa os testes unitarios
echo "Executando testes unit√°rios.."
npm run test
testStatus=$?

# Executa lint
echo "Executando Lint.."
npm run lint

# Verifica se os testes unit√°rio falharam
if [ $testStatus -ne 0 ]; then
  exitWithMessage " üö® Testes unit√°rios falharam. Abortando o commit." 1 
fi

# Verifica cobertura de testes
echo "Verificando cobertura de testes unit√°rios.."
npm run test:cov
coverageStatus=$?

# Verifica se a cobertura de teste atende os threasholds
if [ $coverageStatus -ne 0 ]; then
  exitWithMessage " üö® Cobertura de testes unit√°rios insuficientes. Abortando o commit." 1
fi

exitWithMessage " ‚úÖ Valida√ß√£o pre-commit finalizada com sucesso" 0